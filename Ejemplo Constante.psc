//Definicion de Constante: Valor que no se puede alterar durante la ejecucion del programa

//Ejemplo:
Algoritmo Constante
	Definir NumeroPI Como Real;
	Definir Radio,Area Como Real;
	
	NumeroPI=3.14;
	Radio=0;
	Area=0;
	
	Escribir "Digite el radio del circulo.";
	Leer Radio;
	Area=NumeroPI*Radio*Radio;
	Escribir "Area: ",Area;
FinAlgoritmo

